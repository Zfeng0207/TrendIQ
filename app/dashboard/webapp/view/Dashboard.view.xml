<mvc:View
    controllerName="beautyleads.dashboard.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:vizData="sap.viz.ui5.data"
    xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds"
    xmlns:mc="sap.suite.ui.microchart"
    height="100%">

    <Page
        id="dashboardPage"
        title="{i18n>appTitle}"
        showNavButton="false"
        enableScrolling="true"
        class="sapUiResponsiveContentPadding dashboardPage">

        <!-- Header Toolbar with Date Range Picker -->
        <customHeader>
            <Bar class="dashboardHeader">
                <contentLeft>
                    <Title text="{i18n>appTitle}" class="dashboardTitle"/>
                </contentLeft>
                <contentRight>
                    <!-- Date Range Picker -->
                    <HBox alignItems="Center" class="dateRangeSection">
                        <Label text="Period:" class="dateRangeLabel"/>
                        <Select
                            id="dateRangePicker"
                            selectedKey="thisMonth"
                            change=".onDateRangeChange"
                            class="dateRangeSelect"
                            width="140px">
                            <core:Item key="today" text="Today"/>
                            <core:Item key="yesterday" text="Yesterday"/>
                            <core:Item key="thisWeek" text="This Week"/>
                            <core:Item key="lastWeek" text="Last Week"/>
                            <core:Item key="thisMonth" text="This Month"/>
                            <core:Item key="lastMonth" text="Last Month"/>
                            <core:Item key="thisQuarter" text="This Quarter"/>
                            <core:Item key="thisYear" text="This Year"/>
                        </Select>
                    </HBox>
                    <ToolbarSeparator/>
                    <Button
                        icon="sap-icon://refresh"
                        tooltip="{i18n>refresh}"
                        press=".onRefresh"
                        type="Transparent"/>
                    <Text text="{kpi>/lastUpdated}" class="lastUpdatedText"/>
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <VBox class="dashboardContent">

                <!-- ========================================== -->
                <!-- SECTION 1: KPI TILES - 6 tiles in single row -->
                <!-- Using Grid with XL2 L4 M6 S12 for proper alignment -->
                <!-- Added trend indicators with percentages -->
                <!-- ========================================== -->
                <l:Grid
                    id="kpiTileGrid"
                    class="kpiTileGrid"
                    defaultSpan="XL2 L4 M6 S12"
                    hSpacing="1"
                    vSpacing="1">

                    <!-- Hot Leads Tile with Trend -->
                    <GenericTile
                        id="tileHotLeads"
                        header="{i18n>kpiHotLeads}"
                        subheader="{kpi>/trends/hotLeadsTrend}"
                        class="kpiTile kpiTileOrange"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/leadKPIs/hotLeads}"
                                scale=""
                                valueColor="Good"
                                indicator="{kpi>/trends/hotLeadsIndicator}"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Pipeline Value Tile with Trend -->
                    <GenericTile
                        id="tilePipelineValue"
                        header="{i18n>kpiPipelineValue}"
                        subheader="{kpi>/trends/pipelineTrend}"
                        class="kpiTile kpiTileBlue"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/opportunityKPIs/totalPipelineValue}"
                                scale="RM"
                                valueColor="Neutral"
                                indicator="{kpi>/trends/pipelineIndicator}"
                                truncateValueTo="5"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Closing This Month Tile -->
                    <GenericTile
                        id="tileClosingThisMonth"
                        header="{i18n>kpiClosingThisMonth}"
                        subheader="{i18n>kpiClosingThisMonthSubtitle}"
                        class="kpiTile kpiTileGreen"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/closingThisMonth}"
                                valueColor="Good"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                    <!-- At Risk Accounts Tile with Trend -->
                    <GenericTile
                        id="tileAtRisk"
                        header="{i18n>kpiAtRiskAccounts}"
                        subheader="{kpi>/trends/atRiskTrend}"
                        class="kpiTile kpiTileRed"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/accountKPIs/atRiskCount}"
                                valueColor="Critical"
                                indicator="{kpi>/trends/atRiskIndicator}"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Avg AI Win Score Tile with Trend -->
                    <GenericTile
                        id="tileAvgWinScore"
                        header="{i18n>kpiAvgWinScore}"
                        subheader="{kpi>/trends/winScoreTrend}"
                        class="kpiTile kpiTilePurple"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/opportunityKPIs/avgWinScore}"
                                scale="%"
                                valueColor="Neutral"
                                indicator="{kpi>/trends/winScoreIndicator}"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                    <!-- Open Tasks Tile with Trend -->
                    <GenericTile
                        id="tileOpenTasks"
                        header="{i18n>kpiOpenTasks}"
                        subheader="{kpi>/trends/tasksTrend}"
                        class="kpiTile kpiTileTeal"
                        press=".onTilePress"
                        frameType="OneByOne">
                        <TileContent>
                            <NumericContent
                                value="{kpi>/activityKPIs/plannedActivities}"
                                valueColor="Neutral"
                                indicator="{kpi>/trends/tasksIndicator}"
                                withMargin="false"/>
                        </TileContent>
                    </GenericTile>

                </l:Grid>

                <!-- ========================================== -->
                <!-- AI INSIGHTS QUICK SUMMARY BAR -->
                <!-- Action-oriented recommendations -->
                <!-- ========================================== -->
                <HBox 
                    id="aiInsightsBar" 
                    class="aiInsightsBar sapUiSmallMarginBottom"
                    justifyContent="SpaceBetween"
                    alignItems="Center"
                    wrap="Wrap">
                    
                    <!-- AI Insight 1: Hot Leads -->
                    <HBox class="aiInsightItem aiInsightHot" alignItems="Center">
                        <core:Icon src="sap-icon://lightbulb" class="aiInsightIcon"/>
                        <VBox class="aiInsightText">
                            <Text text="Focus: {kpi>/leadKPIs/hotLeads} hot leads ready" class="aiInsightTitle"/>
                            <Text text="High AI scores - prioritize outreach" class="aiInsightDesc"/>
                        </VBox>
                        <Button icon="sap-icon://slim-arrow-right" type="Transparent" press=".onViewAllLeads" class="aiInsightAction"/>
                    </HBox>

                    <!-- AI Insight 2: Pipeline Opportunities -->
                    <HBox class="aiInsightItem aiInsightPipeline" alignItems="Center">
                        <core:Icon src="sap-icon://sales-quote" class="aiInsightIcon"/>
                        <VBox class="aiInsightText">
                            <Text text="{kpi>/opportunityKPIs/wonCount} deals won this period" class="aiInsightTitle"/>
                            <Text text="RM {kpi>/opportunityKPIs/wonRevenue} closed revenue" class="aiInsightDesc"/>
                        </VBox>
                        <Button icon="sap-icon://slim-arrow-right" type="Transparent" press=".onViewAllOpportunities" class="aiInsightAction"/>
                    </HBox>

                    <!-- AI Insight 3: Account Health -->
                    <HBox class="aiInsightItem aiInsightHealth" alignItems="Center" visible="{= ${kpi>/accountKPIs/atRiskCount} > 0}">
                        <core:Icon src="sap-icon://warning2" class="aiInsightIcon aiInsightWarning"/>
                        <VBox class="aiInsightText">
                            <Text text="Alert: {kpi>/accountKPIs/atRiskCount} accounts at risk" class="aiInsightTitle"/>
                            <Text text="Schedule check-ins to prevent churn" class="aiInsightDesc"/>
                        </VBox>
                        <Button icon="sap-icon://slim-arrow-right" type="Transparent" press=".onViewAllAccounts" class="aiInsightAction"/>
                    </HBox>

                    <!-- AI Insight 3 Alternative: All Healthy -->
                    <HBox class="aiInsightItem aiInsightHealthy" alignItems="Center" visible="{= ${kpi>/accountKPIs/atRiskCount} === 0}">
                        <core:Icon src="sap-icon://sys-enter-2" class="aiInsightIcon aiInsightSuccess"/>
                        <VBox class="aiInsightText">
                            <Text text="Great! All accounts healthy" class="aiInsightTitle"/>
                            <Text text="{kpi>/healthDistribution/healthy} accounts in good standing" class="aiInsightDesc"/>
                        </VBox>
                    </HBox>

                </HBox>

                <!-- ========================================== -->
                <!-- SECTION 2: SALES FUNNEL + ACTIVITY TIMELINE -->
                <!-- Left: Sales Funnel (6 cols), Right: Activity (6 cols) -->
                <!-- ========================================== -->
                <l:Grid
                    id="pipelineActivitySection"
                    class="pipelineActivitySection"
                    defaultSpan="XL6 L6 M12 S12"
                    hSpacing="1"
                    vSpacing="1">

                    <!-- Sales Funnel - Creatio Style -->
                    <f:Card class="dashboardCard funnelCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>salesFunnelTitle}"
                                subtitle="{i18n>salesFunnelSubtitle}"
                                iconSrc="sap-icon://sales-order"/>
                        </f:header>
                        <f:content>
                            <VBox class="salesFunnelContainer" alignItems="Center">
                                <!-- Funnel Stage 1: Total Leads -->
                                <HBox class="funnelStage funnelStage1" alignItems="Center" justifyContent="Center">
                                    <Text text="Leads" class="funnelLabel"/>
                                    <Text text="{kpi>/leadKPIs/totalLeads}" class="funnelValue"/>
                                </HBox>
                                
                                <!-- Funnel Stage 2: Qualified Leads -->
                                <HBox class="funnelStage funnelStage2" alignItems="Center" justifyContent="Center">
                                    <Text text="Qualified" class="funnelLabel"/>
                                    <Text text="{kpi>/funnelData/qualifiedLeads}" class="funnelValue"/>
                                </HBox>
                                
                                <!-- Funnel Stage 3: Opportunities -->
                                <HBox class="funnelStage funnelStage3" alignItems="Center" justifyContent="Center">
                                    <Text text="Opportunities" class="funnelLabel"/>
                                    <Text text="{kpi>/opportunityKPIs/totalOpportunities}" class="funnelValue"/>
                                </HBox>
                                
                                <!-- Funnel Stage 4: Proposals -->
                                <HBox class="funnelStage funnelStage4" alignItems="Center" justifyContent="Center">
                                    <Text text="Proposals" class="funnelLabel"/>
                                    <Text text="{kpi>/funnelData/proposalCount}" class="funnelValue"/>
                                </HBox>
                                
                                <!-- Funnel Stage 5: Won Deals -->
                                <HBox class="funnelStage funnelStage5" alignItems="Center" justifyContent="Center">
                                    <Text text="Won Deals" class="funnelLabel"/>
                                    <Text text="{kpi>/opportunityKPIs/wonCount}" class="funnelValue"/>
                                </HBox>
                                
                                <!-- Conversion Rate Summary -->
                                <HBox class="funnelConversionRow sapUiSmallMarginTop" justifyContent="SpaceAround" width="100%">
                                    <VBox alignItems="Center" class="conversionMetric">
                                        <Text text="{kpi>/funnelData/leadToOppRate}%" class="conversionValue"/>
                                        <Text text="Lead → Opp" class="conversionLabel"/>
                                    </VBox>
                                    <VBox alignItems="Center" class="conversionMetric">
                                        <Text text="{kpi>/funnelData/oppToWonRate}%" class="conversionValue"/>
                                        <Text text="Opp → Won" class="conversionLabel"/>
                                    </VBox>
                                    <VBox alignItems="Center" class="conversionMetric">
                                        <Text text="{kpi>/funnelData/overallRate}%" class="conversionValue conversionValueHighlight"/>
                                        <Text text="Overall" class="conversionLabel"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <!-- Recent Activities Timeline -->
                    <f:Card class="dashboardCard activityCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>recentActivitiesTitle}"
                                subtitle="{i18n>recentActivitiesSubtitle}"
                                iconSrc="sap-icon://activity-items"/>
                        </f:header>
                        <f:content>
                            <List
                                id="recentActivitiesList"
                                items="{path: '/RecentActivities', length: 6}"
                                mode="None"
                                showSeparators="Inner">
                                <FeedListItem
                                    sender="{assignedToName}"
                                    icon="{= ${activityType} === 'Call' ? 'sap-icon://call' : ${activityType} === 'Email' ? 'sap-icon://email' : ${activityType} === 'Meeting' ? 'sap-icon://meeting-room' : 'sap-icon://task'}"
                                    text="{subject}"
                                    info="{activityType}"
                                    timestamp="{path: 'startDateTime', formatter: '.formatDateTime'}"
                                    senderPress=".onActivitySenderPress"
                                    iconPress=".onActivityPress">
                                </FeedListItem>
                            </List>
                        </f:content>
                    </f:Card>

                </l:Grid>

                <!-- ========================================== -->
                <!-- SECTION 3: AI INSIGHTS CARDS (3 columns) -->
                <!-- ========================================== -->
                <l:Grid
                    id="aiInsightsSection"
                    class="aiInsightsSection"
                    defaultSpan="XL4 L4 M6 S12"
                    hSpacing="1"
                    vSpacing="1">

                    <!-- Card 3A: Top Leads by AI Score -->
                    <f:Card class="dashboardCard aiCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>aiLeadScoresTitle}"
                                subtitle="{i18n>aiLeadScoresSubtitle}"
                                iconSrc="sap-icon://lead"
                                statusText="{kpi>/leadKPIs/totalLeads} total"/>
                        </f:header>
                        <f:content>
                            <VBox>
                                <List
                                    id="topLeadsList"
                                    items="{path: '/TopLeadsByAI', length: 5}"
                                    mode="None"
                                    showSeparators="Inner">
                                    <ObjectListItem
                                        title="{outletName}"
                                        number="{aiScore}"
                                        numberUnit="AI"
                                        numberState="{= ${aiScore} >= 80 ? 'Success' : ${aiScore} >= 60 ? 'Warning' : 'Error'}"
                                        type="Active"
                                        press=".onLeadPress">
                                        <firstStatus>
                                            <ObjectStatus
                                                text="{leadQuality}"
                                                state="{= ${leadQuality} === 'Hot' ? 'Success' : ${leadQuality} === 'Warm' ? 'Warning' : 'None'}"
                                                inverted="true"/>
                                        </firstStatus>
                                        <attributes>
                                            <ObjectAttribute text="{brandToPitch}"/>
                                        </attributes>
                                    </ObjectListItem>
                                </List>
                                <OverflowToolbar class="cardFooterToolbar viewAllToolbar">
                                    <ToolbarSpacer/>
                                    <Button 
                                        text="{i18n>viewAllLeads}" 
                                        type="Emphasized" 
                                        press=".onViewAllLeads"
                                        class="viewAllButton"/>
                                </OverflowToolbar>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <!-- Card 3B: Account Health Distribution -->
                    <f:Card class="dashboardCard aiCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>aiAccountHealthTitle}"
                                subtitle="{i18n>aiAccountHealthSubtitle}"
                                iconSrc="sap-icon://customer"
                                statusText="{kpi>/accountKPIs/totalAccounts} accounts"/>
                        </f:header>
                        <f:content>
                            <VBox class="healthDistributionBox">
                                <!-- Health Distribution with Donut-style indicators -->
                                <HBox justifyContent="SpaceAround" class="healthGauges sapUiSmallMarginTop sapUiSmallMarginBottom">
                                    <VBox alignItems="Center" class="healthGaugeItem">
                                        <mc:RadialMicroChart
                                            size="M"
                                            percentage="{kpi>/healthDistribution/healthyPercent}"
                                            valueColor="Good"/>
                                        <Text text="{kpi>/healthDistribution/healthy}" class="gaugeValue"/>
                                        <Label text="Healthy" class="gaugeLabel healthyLabel"/>
                                    </VBox>
                                    <VBox alignItems="Center" class="healthGaugeItem">
                                        <mc:RadialMicroChart
                                            size="M"
                                            percentage="{kpi>/healthDistribution/monitorPercent}"
                                            valueColor="Critical"/>
                                        <Text text="{kpi>/healthDistribution/monitor}" class="gaugeValue"/>
                                        <Label text="Monitor" class="gaugeLabel monitorLabel"/>
                                    </VBox>
                                    <VBox alignItems="Center" class="healthGaugeItem">
                                        <mc:RadialMicroChart
                                            size="M"
                                            percentage="{kpi>/healthDistribution/atRiskPercent}"
                                            valueColor="Error"/>
                                        <Text text="{kpi>/healthDistribution/atRisk}" class="gaugeValue"/>
                                        <Label text="At Risk" class="gaugeLabel atRiskLabel"/>
                                    </VBox>
                                </HBox>

                                <!-- At Risk Accounts List with conditional display -->
                                <VBox id="atRiskSection" visible="{= ${kpi>/healthDistribution/atRisk} > 0}">
                                    <List
                                        id="atRiskAccountsList"
                                        items="{path: '/AtRiskAccounts', length: 3}"
                                        headerText="{i18n>needsAttention}"
                                        mode="None"
                                        showSeparators="Inner">
                                        <StandardListItem
                                            title="{accountName}"
                                            description="{accountType}"
                                            info="Health: {healthScore}"
                                            infoState="{= ${healthScore} >= 50 ? 'Warning' : 'Error'}"
                                            type="Active"
                                            press=".onAccountPress"/>
                                    </List>
                                </VBox>
                                <!-- All Healthy message when no at-risk accounts -->
                                <VBox 
                                    visible="{= ${kpi>/healthDistribution/atRisk} === 0}"
                                    alignItems="Center"
                                    justifyContent="Center"
                                    class="allHealthyBox">
                                    <core:Icon src="sap-icon://accept" size="2rem" color="#107E3E" class="sapUiSmallMarginBottom"/>
                                    <Text text="{i18n>noAccountsAtRisk}" class="allHealthyText"/>
                                </VBox>
                                <OverflowToolbar class="cardFooterToolbar viewAllToolbar">
                                    <ToolbarSpacer/>
                                    <Button 
                                        text="{i18n>viewAllAccounts}" 
                                        type="Emphasized" 
                                        press=".onViewAllAccounts"
                                        class="viewAllButton"/>
                                </OverflowToolbar>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <!-- Card 3C: Top Opportunities by Win Score -->
                    <f:Card class="dashboardCard aiCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>aiOpportunityPredictionsTitle}"
                                subtitle="{i18n>aiOpportunityPredictionsSubtitle}"
                                iconSrc="sap-icon://opportunity"
                                statusText="RM {kpi>/opportunityKPIs/totalPipelineValue}"/>
                        </f:header>
                        <f:content>
                            <VBox>
                                <List
                                    id="topOpportunitiesList"
                                    items="{path: '/TopOpportunitiesByWinScore', length: 5}"
                                    mode="None"
                                    showSeparators="Inner">
                                    <ObjectListItem
                                        title="{name}"
                                        number="{aiWinScore}"
                                        numberUnit="%"
                                        numberState="{= ${aiWinScore} >= 80 ? 'Success' : ${aiWinScore} >= 60 ? 'Warning' : 'Error'}"
                                        type="Active"
                                        press=".onOpportunityPress">
                                        <firstStatus>
                                            <ObjectStatus
                                                text="{stage}"
                                                inverted="true"
                                                state="{= ${stage} === 'Proposal' || ${stage} === 'Negotiation' ? 'Success' : 'Information'}"/>
                                        </firstStatus>
                                        <attributes>
                                            <ObjectAttribute text="RM {expectedRevenue}"/>
                                        </attributes>
                                    </ObjectListItem>
                                </List>
                                <OverflowToolbar class="cardFooterToolbar viewAllToolbar">
                                    <ToolbarSpacer/>
                                    <Button 
                                        text="{i18n>viewAllOpportunities}" 
                                        type="Emphasized" 
                                        press=".onViewAllOpportunities"
                                        class="viewAllButton"/>
                                </OverflowToolbar>
                            </VBox>
                        </f:content>
                    </f:Card>

                </l:Grid>

                <!-- ========================================== -->
                <!-- SECTION 4: TASKS, PRODUCTS & CAMPAIGNS (3 columns) -->
                <!-- ========================================== -->
                <l:Grid
                    id="bottomSection"
                    class="bottomSection"
                    defaultSpan="XL4 L4 M6 S12"
                    hSpacing="1"
                    vSpacing="1">

                    <!-- Upcoming Tasks -->
                    <f:Card class="dashboardCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>upcomingTasksTitle}"
                                subtitle="{i18n>upcomingTasksSubtitle}"
                                iconSrc="sap-icon://task"/>
                        </f:header>
                        <f:content>
                            <List
                                id="upcomingTasksList"
                                items="{path: '/UpcomingTasks', length: 5}"
                                mode="None"
                                showSeparators="Inner">
                                <ObjectListItem
                                    title="{subject}"
                                    number="{path: 'dueDate', formatter: '.formatDate'}"
                                    numberUnit="Due"
                                    numberState="{= ${priority} === 'High' ? 'Error' : 'None'}"
                                    type="Active"
                                    press=".onTaskPress">
                                    <firstStatus>
                                        <ObjectStatus
                                            text="{priority}"
                                            state="{= ${priority} === 'High' ? 'Error' : ${priority} === 'Medium' ? 'Warning' : 'Success'}"/>
                                    </firstStatus>
                                    <attributes>
                                        <ObjectAttribute text="{accountName}"/>
                                    </attributes>
                                </ObjectListItem>
                            </List>
                        </f:content>
                    </f:Card>

                    <!-- Trending Products -->
                    <f:Card class="dashboardCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>trendingProductsTitle}"
                                subtitle="{i18n>trendingProductsSubtitle}"
                                iconSrc="sap-icon://product"/>
                        </f:header>
                        <f:content>
                            <List
                                id="trendingProductsList"
                                items="{path: '/TrendingProducts', length: 5}"
                                mode="None"
                                showSeparators="Inner">
                                <ObjectListItem
                                    title="{productName}"
                                    number="{trendScore}"
                                    numberUnit="Trend"
                                    numberState="Success"
                                    type="Active"
                                    press=".onProductPress">
                                    <firstStatus>
                                        <ObjectStatus
                                            text="{brand}"
                                            inverted="false"/>
                                    </firstStatus>
                                    <attributes>
                                        <ObjectAttribute text="RM {listPrice}"/>
                                    </attributes>
                                </ObjectListItem>
                            </List>
                        </f:content>
                    </f:Card>

                    <!-- Active Campaigns -->
                    <f:Card class="dashboardCard">
                        <f:header>
                            <f:cards.Header
                                title="{i18n>activeCampaignsTitle}"
                                subtitle="{i18n>activeCampaignsSubtitle}"
                                iconSrc="sap-icon://marketing-campaign"
                                statusText="{kpi>/campaignKPIs/activeCampaigns} active"/>
                        </f:header>
                        <f:content>
                            <List
                                id="activeCampaignsList"
                                items="{path: '/ActiveCampaigns', length: 5}"
                                mode="None"
                                showSeparators="Inner">
                                <ObjectListItem
                                    title="{campaignName}"
                                    number="RM {budget}"
                                    numberUnit="Budget"
                                    type="Active"
                                    press=".onCampaignPress">
                                    <firstStatus>
                                        <ObjectStatus
                                            text="{status}"
                                            state="{= ${status} === 'Active' ? 'Success' : 'Warning'}"
                                            inverted="true"/>
                                    </firstStatus>
                                    <attributes>
                                        <ObjectAttribute text="{campaignType}"/>
                                    </attributes>
                                </ObjectListItem>
                            </List>
                        </f:content>
                    </f:Card>

                </l:Grid>

            </VBox>
        </content>
    </Page>
</mvc:View>
