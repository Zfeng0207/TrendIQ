<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog 
        id="partnerInfoDialog"
        title="{i18n>partnerInfoFormTitle}"
        contentWidth="600px"
        contentHeight="auto">
        <content>
            <form:SimpleForm 
                id="partnerInfoForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false">
                <form:content>
                    <Label text="{i18n>companyName}" required="true"/>
                    <Input id="companyNameInput" value="" placeholder="{i18n>companyName}"/>
                    
                    <Label text="{i18n>companyRegistrationNumber}" required="true"/>
                    <Input id="companyRegInput" value="" placeholder="{i18n>companyRegistrationNumber}"/>
                    
                    <Label text="{i18n>businessAddress}" required="true"/>
                    <TextArea id="businessAddressInput" rows="3" value="" placeholder="{i18n>businessAddress}"/>
                    
                    <Label text="{i18n>contactPerson}" required="true"/>
                    <Input id="contactPersonInput" value="" placeholder="{i18n>contactPerson}"/>
                    
                    <Label text="{i18n>contactEmail}" required="true"/>
                    <Input id="contactEmailInput" type="Email" value="" placeholder="{i18n>contactEmail}"/>
                    
                    <Label text="{i18n>contactPhone}" required="true"/>
                    <Input id="contactPhoneInput" type="Tel" value="" placeholder="{i18n>contactPhone}"/>
                    
                    <Label text="{i18n>businessType}"/>
                    <Select id="businessTypeSelect" forceSelection="false">
                        <items>
                            <core:Item key="Salon" text="{i18n>salon}"/>
                            <core:Item key="Spa" text="{i18n>spa}"/>
                            <core:Item key="Retailer" text="{i18n>retailer}"/>
                            <core:Item key="E-commerce" text="{i18n>ecommerce}"/>
                            <core:Item key="Kiosk" text="{i18n>kiosk}"/>
                            <core:Item key="Distributor" text="{i18n>distributor}"/>
                        </items>
                    </Select>
                    
                    <Label text="{i18n>numberOfOutlets}"/>
                    <Input id="outletsInput" type="Number" value="" placeholder="{i18n>numberOfOutlets}"/>
                    
                    <Label text="{i18n>annualRevenue}"/>
                    <Input id="revenueInput" type="Number" value="" placeholder="{i18n>annualRevenue}"/>
                    
                    <Label text="{i18n>taxId}"/>
                    <Input id="taxIdInput" value="" placeholder="{i18n>taxId}"/>
                    
                    <Label text="{i18n>bankName}"/>
                    <Input id="bankNameInput" value="" placeholder="{i18n>bankName}"/>
                    
                    <Label text="{i18n>bankAccountNumber}"/>
                    <Input id="bankAccountInput" value="" placeholder="{i18n>bankAccountNumber}"/>
                    
                    <Label text="{i18n>additionalNotes}"/>
                    <TextArea id="notesInput" rows="4" value="" placeholder="{i18n>additionalNotes}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button 
                text="{i18n>submit}"
                type="Emphasized"
                press=".onSubmitPartnerInfo"/>
        </beginButton>
        <endButton>
            <Button 
                text="{i18n>cancel}"
                press=".onCancelPartnerInfo"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>

