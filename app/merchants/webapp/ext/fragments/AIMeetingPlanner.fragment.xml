<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        id="aiMeetingPlannerDialog"
        title="AI Meeting Planner"
        contentWidth="650px"
        contentHeight="75vh"
        resizable="true"
        draggable="true"
        icon="sap-icon://discussion-2">
        
        <content>
            <ScrollContainer
                height="100%"
                width="100%"
                vertical="true"
                horizontal="false"
                class="aiMeetingPlannerContent">
                
                <VBox class="sapUiSmallMargin">
                    
                    <!-- Partner Overview Card -->
                    <VBox class="partnerOverviewCard sapUiTinyMarginBottom">
                        <HBox alignItems="Center" justifyContent="SpaceBetween" class="cardHeader">
                            <HBox alignItems="Center">
                                <core:Icon src="sap-icon://customer" size="1.2rem" color="#0070f2" class="sapUiTinyMarginEnd" />
                                <Title text="Partner Overview" level="H4" />
                            </HBox>
                        </HBox>
                        <VBox class="cardContent">
                            <HBox class="infoRow">
                                <VBox width="50%">
                                    <Label text="Partner Name" class="infoLabel" />
                                    <Text id="partnerName" text="{merchantName}" class="infoValue" />
                                </VBox>
                                <VBox width="50%">
                                    <Label text="Business Type" class="infoLabel" />
                                    <Text id="businessType" text="{businessType}" class="infoValue" />
                                </VBox>
                            </HBox>
                            <HBox class="infoRow">
                                <VBox width="50%">
                                    <Label text="Location" class="infoLabel" />
                                    <Text id="location" text="{city}" class="infoValue" />
                                </VBox>
                                <VBox width="50%">
                                    <Label text="Partner Score" class="infoLabel" />
                                    <HBox alignItems="Center">
                                        <Text id="partnerScore" text="{merchantScore}%" class="scoreValue" />
                                        <ProgressIndicator
                                            percentValue="75"
                                            displayValue=""
                                            width="80px"
                                            state="Success"
                                            class="sapUiTinyMarginBegin" />
                                    </HBox>
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Suggested Opening Card -->
                    <VBox class="suggestedOpeningCard sapUiTinyMarginBottom">
                        <HBox alignItems="Center" class="cardHeader">
                            <core:Icon src="sap-icon://comment" size="1.2rem" color="#2b7c2b" class="sapUiTinyMarginEnd" />
                            <Title text="Suggested Opening" level="H4" />
                        </HBox>
                        <VBox class="cardContent openingScript">
                            <FormattedText
                                id="suggestedOpening"
                                htmlText=""
                                class="scriptText" />
                        </VBox>
                    </VBox>
                    
                    <!-- Business Context Card -->
                    <VBox class="businessContextCard sapUiTinyMarginBottom">
                        <HBox alignItems="Center" class="cardHeader">
                            <core:Icon src="sap-icon://measurement-document" size="1.2rem" color="#e09d00" class="sapUiTinyMarginEnd" />
                            <Title text="Business Context" level="H4" />
                        </HBox>
                        <VBox class="cardContent">
                            <HBox class="contextItem">
                                <core:Icon src="sap-icon://factory" class="contextIcon" color="#0070f2" />
                                <VBox class="contextDetails">
                                    <Label text="Business Type" class="contextLabel" />
                                    <Text id="contextBusinessType" text="" class="contextValue" />
                                </VBox>
                            </HBox>
                            <HBox class="contextItem">
                                <core:Icon src="sap-icon://map-2" class="contextIcon" color="#0070f2" />
                                <VBox class="contextDetails">
                                    <Label text="Location" class="contextLabel" />
                                    <Text id="contextLocation" text="" class="contextValue" />
                                </VBox>
                            </HBox>
                            <HBox class="contextItem">
                                <core:Icon src="sap-icon://source-code" class="contextIcon" color="#0070f2" />
                                <VBox class="contextDetails">
                                    <Label text="Discovery Source" class="contextLabel" />
                                    <Text id="contextDiscoverySource" text="" class="contextValue" />
                                </VBox>
                            </HBox>
                            <HBox class="contextItem">
                                <core:Icon src="sap-icon://world" class="contextIcon" color="#0070f2" />
                                <VBox class="contextDetails">
                                    <Label text="Social Reach" class="contextLabel" />
                                    <Text id="contextSocialLinks" text="" class="contextValue" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Talking Points Card -->
                    <VBox class="talkingPointsCard sapUiTinyMarginBottom">
                        <HBox alignItems="Center" class="cardHeader">
                            <core:Icon src="sap-icon://checklist-item" size="1.2rem" color="#bb0000" class="sapUiTinyMarginEnd" />
                            <Title text="Recommended Talking Points" level="H4" />
                        </HBox>
                        <VBox class="cardContent">
                            <VBox id="talkingPointsList" class="talkingPointsList" />
                        </VBox>
                    </VBox>
                    
                    <!-- Next Action Card -->
                    <VBox class="nextActionCard">
                        <HBox alignItems="Center" class="cardHeader">
                            <core:Icon src="sap-icon://action" size="1.2rem" color="#5e696e" class="sapUiTinyMarginEnd" />
                            <Title text="Next Steps" level="H4" />
                        </HBox>
                        <VBox class="cardContent">
                            <MessageStrip
                                text="Schedule a follow-up meeting to discuss partnership opportunities"
                                type="Information"
                                showIcon="true"
                                class="sapUiSmallMarginBottom" />
                            <FormattedText
                                id="nextAction"
                                htmlText=""
                                class="nextActionText" />
                        </VBox>
                    </VBox>
                    
                </VBox>
                
            </ScrollContainer>
        </content>
        
        <beginButton>
            <Button
                text="Copy to Clipboard"
                icon="sap-icon://copy"
                press=".onCopyMeetingScript"
                type="Emphasized" />
        </beginButton>
        
        <endButton>
            <Button
                text="Close"
                press=".onCloseAIMeetingPlanner"
                type="Transparent" />
        </endButton>
        
    </Dialog>
    
</core:FragmentDefinition>
